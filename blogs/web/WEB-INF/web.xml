<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>register_serv</servlet-name>
        <servlet-class>com.blog.servlets.register_serv</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login_serv</servlet-name>
        <servlet-class>com.blog.servlets.login_serv</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout_serv</servlet-name>
        <servlet-class>com.blog.servlets.logout_serv</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editprofile_serv</servlet-name>
        <servlet-class>com.blog.servlets.editprofile_serv</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>test</servlet-name>
        <servlet-class>com.blog.servlets.test</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addpost_serv</servlet-name>
        <servlet-class>com.blog.servlets.addpost_serv</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register_serv</servlet-name>
        <url-pattern>/register_serv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login_serv</servlet-name>
        <url-pattern>/login_serv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout_serv</servlet-name>
        <url-pattern>/logout_serv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editprofile_serv</servlet-name>
        <url-pattern>/editprofile_serv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addpost_serv</servlet-name>
        <url-pattern>/addpost_serv</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
